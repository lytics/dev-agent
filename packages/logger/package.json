{
  "name": "@lytics/kero",
  "version": "1.0.0",
  "description": "Zero-dependency TypeScript logger with structured logging, multiple transports, and beautiful output",
  "private": false,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "!dist/**/*.test.js",
    "!dist/**/*.test.d.ts",
    "!dist/**/*.test.d.ts.map",
    "!dist/**/*.test.js.map",
    "!dist/**/__tests__"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint ./src",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "keywords": [
    "logger",
    "logging",
    "structured-logging",
    "typescript",
    "nodejs",
    "zero-dependency",
    "pino",
    "winston",
    "json-logging",
    "pretty-logging"
  ],
  "author": "Lytics",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lytics/dev-agent.git",
    "directory": "packages/logger"
  },
  "homepage": "https://github.com/lytics/dev-agent/tree/main/packages/logger#readme",
  "bugs": {
    "url": "https://github.com/lytics/dev-agent/issues"
  },
  "engines": {
    "node": ">=22"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "typescript": "^5.4.5",
    "vitest": "^1.4.0"
  }
}
